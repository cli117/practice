<%- include("partials/header"); -%>

<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="form-group">
    <label for="postTitle">Title</label>
    <input type="text" name="postTitle" class="form-control" autocomplete="off">
  </div>

  <div class="form-group">
    <label for="postBody">Content</label>
    <textarea name="postBody" class="form-control" rows="8" cols="80" autocomplete="off"></textarea>
  </div>

  <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer"); -%>
